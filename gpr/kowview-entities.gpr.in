with "kowconfig";
with "kowconfig-text";
with "kowent";
with "kowlib";
with "kowsec";
with "kowview";

with "aws";



project KOWView.Entities is

	version := KOWView.Version;
	
	
	for Source_Dirs use ( prefix & "/include/kowview-entities" );
	
	-- LIBRARY
	for Library_Dir use prefix & "/lib";
	for Library_Name use "kowview-entities";
	for Library_Kind use KOWView'Library_Kind;
	for Library_Version use "libkowview-entities.so." & Version;
	for Externally_Built use "true";
	
	
	package Compiler is
		for Default_Switches ("ada") use ("-O2", "-gnat05");
	end Compiler;

	package Linker renames KOWLib.Linker;

end KOWView.Entities;

